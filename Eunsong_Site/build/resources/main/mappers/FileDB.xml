<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.example.eunsong_site.dao.FileDBDao">

    <select id="findById" parameterType="String" resultType="com.example.eunsong_site.model.FileDB">
        SELECT ID
             , NAME
             , TYPE
             , DATA
        FROM TB_FILES
        WHERE ID = #{id}
    </select>

    <select id="findAll" resultType="com.example.eunsong_site.model.FileDB">
        SELECT ID
             , NAME
             , TYPE
             , DATA
        FROM TB_FILES
    </select>

    <insert id="save" parameterType="com.example.eunsong_site.model.FileDB">
        INSERT INTO TB_FILES( ID
                            , NAME
                            , TYPE
                            , DATA)
        VALUES ( SQ_FILES.NEXTVAL
               , #{name}
               , #{type}
               , #{data})
    </insert>

</mapper>

